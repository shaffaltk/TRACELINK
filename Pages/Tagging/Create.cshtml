@section Scripts {
    <script>
        // Function to handle tab navigation
        function navigateToTab(fromTabId, toTabId) {
            document.getElementById(fromTabId).classList.remove('show', 'active');
            document.getElementById(fromTabId).classList.add('fade');
            document.getElementById(`${fromTabId}-tab`).classList.remove('active');
            document.getElementById(`${fromTabId}-tab`).setAttribute('aria-selected', 'false');

            document.getElementById(toTabId).classList.remove('fade');
            document.getElementById(toTabId).classList.add('show', 'active');
            document.getElementById(`${toTabId}-tab`).classList.add('active');
            document.getElementById(`${toTabId}-tab`).setAttribute('aria-selected', 'true');
        }

        // Function to validate fields in the current tab
        function validateCurrentTabFields(tabId) {
            let isValid = true;
            // Get all required fields in the tab
            const requiredFields = document.querySelectorAll(`#${tabId} [required]`);

            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    // Mark field as invalid
                    field.classList.add('is-invalid');
                    isValid = false;
                } else {
                    // Remove invalid class if field is valid
                    field.classList.remove('is-invalid');
                }
            });

            return isValid;
        }
        </script>
}
