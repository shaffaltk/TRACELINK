    @RenderSection("Scripts", required: false)

    <script>




        $(document).ready(function () {
            $('.nav-link[data-toggle="collapse"]').on('click', function (e) {
                e.preventDefault();
                var target = $(this).data('target');
                $(target).toggleClass('show');
            });

            if (window.matchMedia("(max-width: 800px)").matches) {
                // Apply DataTable with specific options for small screens
                $('#xTable').DataTable({
                    responsive: true,
                    scrollX: true
                });
            } else {
                // Apply DataTable with default options for larger screens
                $('#xTable').DataTable();
            }

            $('.nav-dropdown-toggle').on('click', function () {
                var $parent = $(this).parent();
                var $dropdowns = $parent.siblings('.nav-dropdown.open');

                $dropdowns.removeClass('open');
                $(this).toggleClass('open');
            });

        });

    </script>

