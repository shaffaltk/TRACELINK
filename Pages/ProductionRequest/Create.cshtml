@page
@model TraceLink.Pages.ProductionRequests.CreateModel

@{
    ViewData["Title"] = "Create Production Request";
}

<h3><i class="bi bi-clipboard-plus"></i> Create Production Request</h3>

<div class="row d-flex align-items-stretch h-100">
    <form method="post" class="form-horizontal w-100">
        <fieldset>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <!-- First Column -->
                <div class="col-12 col-md-4 d-flex">
                    <div class="card mb-2 p-4 w-100 d-flex flex-column">
                        <div class="form-group mb-3">
                            <label asp-for="ProductionRequest.PrNumber" class="form-label">PR Number</label>
                            <input asp-for="ProductionRequest.PrNumber" class="form-control" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProductionRequest.Vendor" class="form-label">Vendor</label>
                            <input asp-for="ProductionRequest.Vendor" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProductionRequest.RequestDate" class="form-label">Request Date</label>
                            <input asp-for="ProductionRequest.RequestDate" type="date" class="form-control" readonly />
                        </div>

                       
                    </div>
                </div>

                <!-- Second Column -->
                <div class="col-12 col-md-4 d-flex">
                    <div class="card mb-2 p-4 w-100 d-flex flex-column">
                        <div class="form-group mb-3">
                            <label asp-for="ProductionRequest.Product" class="form-label">Product</label>
                            <input asp-for="ProductionRequest.Product" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductionRequest.Quantity" class="form-label">Quantity</label>
                            <input asp-for="ProductionRequest.Quantity" type="number" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProductionRequest.SpecialInstruction" class="form-label">Special Instruction</label>
                            <textarea asp-for="ProductionRequest.SpecialInstruction" class="form-control"></textarea>
                        </div>

                        <div class="form-group mb-3 flex-grow-1"></div> <!-- Empty space to balance height -->
                    </div>
                </div>

                <!-- Third Column -->
                <div class="col-12 col-md-4 d-flex">
                    <div class="card mb-2 p-4 w-100 d-flex flex-column">
                        <div class="form-group mb-3">
                            <label asp-for="ProductionRequest.Status" class="form-label">Status</label>
                            <select asp-for="ProductionRequest.Status" class="form-control">
                                <option value="Pending" selected>Pending</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProductionRequest.ClosedDate" class="form-label">Closed Date</label>
                            <input asp-for="ProductionRequest.ClosedDate" type="date" class="form-control" />
                        </div>

                        <div class="form-group mb-3 flex-grow-1"></div> <!-- Empty space to balance height -->
                    </div>
                </div>
            </div>
        </fieldset>

        <!-- Buttons -->
        <div class="col-12 text-start mt-3">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Create Request
            </button>
            <a asp-page="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
