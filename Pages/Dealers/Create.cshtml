@page
@model TraceLink.Pages.Dealers.CreateModel

@{
    ViewData["Title"] = "Create Dealer";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3><i class="bi bi-person-circle"></i> Add Dealer</h3>

<div class="row d-flex align-items-stretch h-100">
    <div class="col-md-4 d-flex flex-column">
        <form method="post" class="form-horizontal" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label" asp-for="Dealer.DealerName">Dealer Name</label>
                <div class="col-sm-8">
                    <input asp-for="Dealer.DealerName" class="form-control" />
                    <span class="text-danger" asp-validation-for="Dealer.DealerName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label" asp-for="UserEmail">Email</label>
                <div class="col-sm-8">
                    <input asp-for="UserEmail" class="form-control" />
                    <span class="text-danger" asp-validation-for="UserEmail"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label" asp-for="UserPassword">Password</label>
                <div class="col-sm-8">
                    <input asp-for="UserPassword" type="password" class="form-control" />
                    <span class="text-danger" asp-validation-for="UserPassword"></span>
                </div>
            </div>

            <!-- Buttons Section -->
            <div class="form-group row mt-4">
                <div class="col-12 text-left">
                    <input type="submit" value="Add" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
